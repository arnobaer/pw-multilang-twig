<!DOCTYPE html>
<html lang="{{ user.language.iso639 }}">
	<head>
		<meta http-equiv="content-type" content="text/html; charset=utf-8" />
		<title>{{ page.title }}</title>
		<link rel="stylesheet" type="text/css" href="{{ config.urls.templates }}assets/styles/main.css" />
	</head>
	<body>

		{% block header %}

		<h1>{{ page.title }}</h1>

		{% if page.editable %}
		<p><a href="{{ page.editURL }}">{{ __("Edit") }}</a></p>
		{% endif %}

		{% endblock %}

		{% block content %}
		{% endblock %}

		<script type="application/javascript" src="{{ config.urls.templates }}assets/scripts/main.js"></script>

	</body>
</html>
